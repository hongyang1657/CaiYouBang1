<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/back"
            android:drawablePadding="5dp"
            android:textSize="30sp"
            android:id="@+id/tv_user_login_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="注册"
            android:textSize="30sp"
            android:id="@+id/tv_user_login_login"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:src="@mipmap/self_selected"
        android:layout_gravity="center_horizontal"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorGraiysh"
        android:drawableLeft="@mipmap/phone"
        android:hint="手机号/邮箱"
        android:id="@+id/et_user_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="2dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorGraiysh"
        android:drawableLeft="@mipmap/phone"
        android:hint="密码"
        android:id="@+id/et_user_key"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@color/colorYellow"
            android:text="立即登录"
            android:layout_centerInParent="true"
            android:layout_margin="30dp"
            android:id="@+id/btn_user_login"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码？"
            android:textSize="15sp"
            android:layout_below="@+id/btn_user_login"
            android:layout_alignRight="@+id/btn_user_login"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="其他方式登录"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/share_qq"
            android:text="QQ"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/tv_user_QQ_login"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/share_weixin"
            android:layout_centerHorizontal="true"
            android:text="微信"
            android:gravity="center"
            android:id="@+id/tv_user_weixin_login"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/share_weibo"
            android:text="微博"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/tv_user_weibo_login"/>
    </RelativeLayout>

</LinearLayout>
