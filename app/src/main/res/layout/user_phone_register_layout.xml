<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_user_phone_register_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorCroci"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_user_phone_register_back"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:drawableLeft="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_user_phone_register_back"
            android:layout_alignTop="@id/tv_user_phone_register_back"
            android:layout_alignBottom="@id/tv_user_phone_register_back"
            android:gravity="center"
            android:text="填写手机号"
            android:textSize="25sp" />
    </RelativeLayout>


</RelativeLayout>
