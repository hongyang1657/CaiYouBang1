<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_user_phone_register_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorCroci"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_user_register_back"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:drawableLeft="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_user_register_back"
            android:layout_alignTop="@id/tv_user_register_back"
            android:layout_toRightOf="@id/tv_user_register_back"
            android:gravity="center"
            android:text="注册账号"
            android:textColor="@color/colorBlackOne"
            android:textSize="25sp" />
    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@mipmap/shurukuang"
        android:layout_below="@id/rl_user_phone_register_title"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="请输入您的账号"
        android:id="@+id/et_user_register_phone_number"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/et_user_register_phone_number"
        android:background="@color/colorCroci"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/rl_user_register_verification_code">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入您的密码"
            android:id="@+id/et_user_register_password"
            android:background="@mipmap/shurukuang"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/rl_user_register_verification_code"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorCrociOne"
        android:text="注册"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/tv_user_register_login"/>

</RelativeLayout>
